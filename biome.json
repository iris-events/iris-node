{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noDelete": "off",
				"noAccumulatingSpread": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			}
		},
		"ignore": ["dist/"]
	}
}
