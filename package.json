{
  "name": "@iris-events/iris",
  "version": "2.0.0",
  "description": "NodeJS module for iris-events",
  "main": "dist/index",
  "types": "dist/index.d.ts",
  "author": "GlobaliD",
  "license": "Apache-2.0",
  "keywords": [
    "iris iris-events"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iris-events/iris-node"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:test": "rimraf dist_all_tmp && tsc -p tsconfig.build-test.json && rimraf dist_all_tmp",
    "lint:checkerrors": "biome check . --diagnostic-level=error",
    "lint": "biome check .",
    "lint:ci": "biome ci .",
    "lint:fix": "biome check --write .",
    "test": "LOG_LEVEL=silent vitest --run",
    "test:debug": "LOG_LEVEL=debug vitest --run --coverage false"
  },
  "dependencies": {
    "lodash": ">=4.17.21",
    "amqplib": "*",
    "class-transformer": "*",
    "class-validator": "*",
    "class-validator-jsonschema": "*",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@swc/core": "^1.7.26",
    "@types/amqplib": ">=0.10.4",
    "@types/lodash": ">=4.17.10",
    "@types/node": ">=18",
    "@vitest/coverage-v8": "^2.1.2",
    "dotenv": "^16.4.5",
    "rimraf": "*",
    "ts-node": ">=10.9.2",
    "typescript": "^5.6.3",
    "unplugin-swc": "^1.5.1",
    "vitest": "^2.1.2"
  },
  "overrides": {
    "reflect-metadata": "^0.2.2",
    "class-transformer": "*",
    "class-validator": "*",
    "class-validator-jsonschema": "*"
  }
}
